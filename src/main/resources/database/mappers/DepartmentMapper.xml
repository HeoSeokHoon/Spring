<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <!-- mapper namespace(중복불가)는 비우면 에러 -->
  <!-- 해당 mapper를 사용할 DAO의 풀패키지명으로 작성 -->
  <mapper namespace="com.winter.app.departments.DepartmentDAO">
  	<!-- detail -->
  	<!-- id값은 DAO의 메서드명 -->
  	<select id="getDetail" resultType="com.winter.app.departments.DepartmentDTO" parameterType="com.winter.app.departments.DepartmentDAO">
  		SELECT * FROM DEPARTMENTS WHERE DEPARTMENT_ID=#{department_id}
  	</select>
  	
  	<!-- list -->
  	<select id="getList" resultType="com.winter.app.departments.DepartmentDAO">
  		SELECT * FROM DEPARTMENTS
  	</select>
  </mapper>